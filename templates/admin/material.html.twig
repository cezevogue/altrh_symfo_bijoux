{% extends 'backoffice.html.twig' %}



{% block body %}

    {{ form(form) }}


    <table class="table table-dark table-striped mt-5">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.title }}</td>
                <td>
                    <a href="{{ path('editMaterial', {'id': material.id}) }}" class="btn btn-info">Modifier</a>
                    <a href="{{ path('deleteMaterial', {'id': material.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
